<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Dojo Survey</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.dev.js"></script>
  <script src="jquery.js"></script>
  <script>
    $(document).ready(function(){
      var socket = io();
      $('#epic').click( function(e){
        socket.emit('click')
      })
      $('#reset').click( function(e){
        socket.emit('reset')
      })
      socket.on('updated_message', function (data) { 
        $('h1').html('The button has been pushed '+data+' time(s)')
      });
      
    })

  </script>
</head>
<body>
  <h1>The button has been pushed <%=count%> time(s)</h1>
  <h3>Push the button to update the count</h3>
  <button id="epic">Push the button</button>
  <button id="reset">Reset Count</button>
</body>
</html>